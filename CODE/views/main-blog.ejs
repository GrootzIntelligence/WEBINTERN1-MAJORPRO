  }

  nav ul li a {
    font-weight: 600;
    color: #000;
    text-decoration: none;
    transition: color 0.4s ease, transform 0.3s ease;
  }

  nav ul li a:hover {
    color: #fff;
  }

  .logo {
    flex: 0 0 auto;
    display: flex;
    justify-content: center;
    margin: 0 1rem;
  }

  .logo img {
    width: 70px;
    height: 60px;
    cursor: pointer;
  }

  .right-menu {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 7rem;
    margin-right: 3rem;
  }

  .right-menu a {
