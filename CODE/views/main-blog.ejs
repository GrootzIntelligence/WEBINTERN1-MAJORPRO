<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

  body {
    font-family: "Poppins", Arial, sans-serif;
    margin: 0;
    padding: 0;
  }

  /* Background image */
  .blog-section {
    margin-top: 6.8rem;
    background: url("/images/blog-img.jpg") no-repeat center center;
    background-size: cover;
    height: 50vh; /* Half the screen height */
    position: relative;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .blog-container {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    z-index: 2; /* On top of the background */
  }

  /* Filter Bar */
  .blog-nav {
    background-color: white;
    border-radius: 9999px;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 10;
    position: absolute;
    bottom: -28rem;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
}

.blog-nav-links {
    display: flex;
    align-items: center;
}

.blog-nav a {
    padding: 0 1rem; /* Adjusted padding for a more compact look */
    text-decoration: none;
    color: #1f2937; /* Darker color for text */
    font-size: 0.875rem; /* Slightly smaller font */
    border-radius: 9999px;
    margin: 0 0.5rem;
    position: relative;
}

.blog-nav a:hover,
.blog-nav a.active {
    color: #1f2937;
}

.blog-nav a.active::after {
    content: "";
    display: block;
    width: 50%;
    height: 2px;
    background-color: #3b82f6; /* Blue underline */
    position: absolute;
    left: 50%;
    bottom: -0.5rem; /* Adjusted position for the underline */
    transform: translateX(-50%);
}

.blog-nav a:hover::after {
    content: "";
    display: block;
    width: 50%;
    height: 2px;
    background-color: #3b82f6;
    position: absolute;
    left: 50%;
    bottom: -0.5rem;
    transform: translateX(-50%);
}

.blog-nav input[type="search"] {
    padding: 0.5rem 1rem;
    border: 1px solid #d1d5db;
    border-radius: 9999px;
    font-size: 0.875rem;
}


  /* Blog Grid */
  .blog-grid {
    margin-top:5rem;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (max-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }
  }

  .blog-post {
    background-color: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    padding: 0.6rem;
  }

  .blog-post img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 3%;
  }

  .blog-post-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .blog-post-author {
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 0.5rem;
  }

  .blog-post h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
    font-weight: bold;
    color: #333;
  }

  .blog-post p {
    color: #6b7280;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
    flex-grow: 1;
  }

  .blog-post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
  }

  .blog-post a {
    color: #3b82f6;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: bold;
  }

  .blog-search-container {
    display: flex;
    align-items: center;
    background-color: #f3f4f6;
    border-radius: 9999px;
    padding: 0.25rem;
  }

  .blog-search-input {
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    border: none;
    background-color: transparent;
    font-size: 0.875rem;
  }

  .blog-search-button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .blog-search-button svg {
    width: 20px;
    height: 20px;
    color: #6b7280;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
