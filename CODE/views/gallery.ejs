<%- include("./partials/head.ejs") %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap");
    
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
    }
    
    .banner {
        margin-top: 6.8rem;
        background: url("/images/gallery-img.png") no-repeat center center;
        background-size: cover;
        height: 50vh;
        position: relative;
    }
    
    .section {
        margin: 20px 0;
        padding: 20px 50px;
        border-radius: 8px;
    }
    
    .section-header h2 {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-top: 0;
    }
    
    .workshops, .food-distribution, .environment-day {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        padding: 40px 0;
    }
    
    .workshops img, .food-distribution img, .environment-day img {
        width: 350px;
        height: 250px;
        object-fit: cover;
        border-radius: 10px;
        transition: transform 0.3s ease;
    }
    
    .workshops img:nth-child(1), .workshops img:nth-child(3),
    .food-distribution img:nth-child(1), .food-distribution img:nth-child(4), .environment-day img:nth-child(1), .environment-day img:nth-child(4) {
        margin-top: 30px;
    }
    
    .workshops img:nth-child(2),
    .food-distribution img:nth-child(2), .food-distribution img:nth-child(3),     .environment-day img:nth-child(2), .environment-day img:nth-child(3){
        margin-top: -30px;
    }
    
    .workshops img:hover, .food-distribution img:hover, .environment-day img:hover {
        transform: translateY(-10px);
    }
    
    .view-more-container {
        text-align: right;
    }
    
    .view-more {
        font-size: 16px;
        text-decoration: none;
        color: blue;
        transition: color 0.3s ease;
    }
    
    .view-more:hover {
        color: darkblue;
    }
</style>
<%- include('./partials/nav.ejs') %>

<section class="banner">
</section>

<!-- Offline Workshops Section -->
<section class="section">
    <div class="section-header">
        <h2>OFFLINE WORKSHOPS</h2>
    </div>
    <div class="workshops">
        <img src="/images/w1.png" alt="Workshop Image 1">
        <img src="/images/w2.png" alt="Workshop Image 2">
        <img src="/images/w3.png" alt="Workshop Image 3">
    </div>
    <div class="view-more-container">
        <a href="#" class="view-more">View more</a>
    </div>
</section>

<!-- Food Distribution Section -->
<section class="section">
    <div class="section-header">
        <h2>FOOD DISTRIBUTION</h2>
    </div>
    <div class="food-distribution">
        <img src="/images/f1.png" alt="Food Image 1">
        <img src="/images/f2.png" alt="Food Image 2">
        <img src="/images/f3.png" alt="Food Image 3">
        <img src="/images/f4.png" alt="Food Image 4">
    </div>
    <div class="view-more-container">
        <a href="#" class="view-more">View more</a>
    </div>
</section>
<section class="section">
    <div class="section-header">
        <h2>Environment Day</h2>
    </div>
    <div class="environment-day">
        <img src="/images/ed1.jpg">
        <img src="/images/ed2.jpg">
        <img src="/images/ed3.jpg">
        <img src="/images/ed4.jpg">
    </div>
    <div class="view-more-container">
        <a href="#" class="view-more">View more</a>
    </div>
</section>

