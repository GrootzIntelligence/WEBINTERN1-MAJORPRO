                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" aria-label="Twitter">
                        <i class="fab fa-twitter"></i>
                    </a>
                </div>
            </div>
        </article>
    </main>
    <%- include('./contact.ejs') %>
<%- include('./footer.ejs') %>
</body>
</html>