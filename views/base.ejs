<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
    
    * {
      font-family: "Poppins", sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      padding-top: 0px;
      background: linear-gradient(45deg, #ff9a9e, #fad0c4, #ffecd2);
      min-height: 100vh;
    }

    .container {
      padding-top: 100px;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    nav {
      flex: 1;
      display: flex;
      justify-content: flex-start;
    }
    
    nav ul {
      margin-top: 12px;
      display: flex;
      list-style-type: none;
      gap: 2rem;
    }
    
    nav ul li a {
      font-weight: 600;
      color: #333;
      text-decoration: none;
      transition: color 0.3s ease;
    }
    
    nav ul li a:hover {
      color: #0066ff;
    }
    
    .logo {
      flex: 0 0 auto;
      display: flex;
      justify-content: center;
      margin: 0 1rem;
    }
    
    .logo img {
      width: 60px;
      height: 50px;
    }
    
    .right-menu {
      flex: 1;
      display: flex;
      justify-content: flex-end;
      align-items: center;
      gap: 1rem;
    }
    
    .right-menu a {
      text-decoration: none;
      transition: all 0.3s ease;
      font-size: 0.9rem;
    }
    
    .academy, .intelligence, .community {
      padding: 0.4rem 0.8rem;
      border-radius: 20px;
    }

    .academy {
      color: #ff6b00;
      background-color: #fff;
    }
    
    .intelligence {
      color: #fff;
      background-color: #333;
    }
    
    .community {
      background-color: #333;
      color: #4494ff;
    }
    
    main {
      padding: 2rem;
      min-height: 200vh;
    }
    
    .welcome-text {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 1rem;
    }

    @media (max-width: 1024px) {
      header {
        flex-wrap: wrap;
        justify-content: center;
      }

      nav {
        order: 2;
        width: 100%;
        justify-content: center;
        margin-top: 1rem;
      }

      .logo {
        order: 1;
      }

      .right-menu {
        order: 3;
        width: 100%;
        justify-content: center;
        margin-top: 1rem;
      }
    }

    @media (max-width: 768px) {
      nav ul {
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
      }

      .right-menu {
        flex-wrap: wrap;
      }

      .welcome-text {
        font-size: 2rem;
      }
    }

    @media (max-width: 480px) {
      header {
        padding: 1rem;
      }

      .logo img {
        width: 50px;
        height: 40px;
      }

      .right-menu a {
        font-size: 0.8rem;
      }

      .welcome-text {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/nav.ejs') %>
  <div class="container">
    <main>
      <%- content %>
    </main>
  </div>
  <script></script>
</body>
</html>