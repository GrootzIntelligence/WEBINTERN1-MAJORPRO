<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>  
    
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
    
    * {
      font-family: "Poppins", sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      padding-top: 70px;
      background: linear-gradient(45deg, #3D67FF, #589FFE, #007FB5);
      min-height: 100vh;
    }
    
    .container {
      padding-top: 0px;
    }
    
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background: rgba(255, 255, 255, 0.15);
      box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
    }
    
    nav {
      flex: 1;
      display: flex;
      justify-content: flex-start;
      font-size: 18px;
    }
    
    nav ul {
      display: flex;
      list-style-type: none;
      margin-top: 1rem;
      gap: 5rem;
    }
    
    nav ul li a {
      font-weight: 500;
      color: #000;
      text-decoration: none;
      transition: color 0.3s ease;
      font-weight:600;
    }
    
    .logo {
      flex: 0 0 auto;
      display: flex;
      justify-content: center;
      margin: 0 1rem;
    }
    
    .logo img {
      width: 70px;
      height: 60px;
    }
    
    .right-menu {
      flex: 1;
      display: flex;
      justify-content: flex-end;
      align-items: center;
      gap: 7rem;
      margin-right: 3rem;
      
    }
    
    .right-menu a {
      text-decoration: none;
      transition: all 0.3s ease;
      font-size: 0.9rem;
      padding: 0.4rem 0.8rem;
      border-radius: 20px;
      font-size: 17px;
    }
    
    .academy {
      color: #ff6b00;
      background-color: #fff;
    }
    
    .intelligence {
      color: #fff;
      background-color: #000;
    }
    
    .community {
      background-color: #333;
      color: #fff;
    }
    
    .hero {
      height: 60vh;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      overflow: hidden;
    }
    
    .hero::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background-image: url('path_to_your_3d_shapes_image.png');
      background-size: cover;
      background-position: center;
      opacity: 0.7;
    }
    
    .about-section {
      background-color: #fff;
      padding: 4rem 2rem;
      text-align: center;
      margin-top: 2rem;
      border-radius: 10px;
    }
    
    .about-section h2 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }
    
    .about-content {
      max-width: 800px;
      margin: 0 auto;
      color: #333;
    }
    
    .burger-menu {
      display: none;
      cursor: pointer;
    }
    
    .burger-menu div {
      width: 25px;
      height: 3px;
      background-color: #fff;
      margin: 5px;
      transition: all 0.3s ease;
    }
    
    @media screen and (max-width: 1024px) {
      nav ul {
        gap: 2rem;
      }
      
      .right-menu {
        gap: 3rem;
      }
    }
    
    @media screen and (max-width: 768px) {
      body {
        padding-top: 60px;
      }
      
      header {
        padding: 1rem;
      }
      
      .burger-menu {
        display: block;
        z-index: 2;
      }
      
      nav {
        position: fixed;
        right: -100%;
        top: 70px;
        width: 100%;
        height: calc(100% - 70px);
        background: rgba(255, 255, 255, 0.9);
        flex-direction: column;
        align-items: center;
        transition: right 0.5s ease;
      }
      
      nav.active {
        right: 0;
      }
      
      nav ul {
        flex-direction: column;
        align-items: center;
        width: 100%;
        gap: 2rem;
        padding-top: 2rem;
      }
      
      nav ul li a {
        color: #333;
      }
      
      .right-menu {
        display: none;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/nav.ejs') %>
  <div class="container">
    <main>
      <%- content %>
    </main>
  </div>
  <script></script>
</body>
</html>
